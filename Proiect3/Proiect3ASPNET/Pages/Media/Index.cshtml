@page 
@model Proiect3ASPNET.Pages.Media.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Media List</h1>

<form>
    <p>
        File Path: <input type="text" asp-for="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<p>
    Number Of Results: @Html.DisplayFor(model => model.numberOfResults)
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Files[0].Id)
            </th>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Files[0].FilePath)
            </th>
            <th>Action</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Files)
        {
            <tr style="font-size:small">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <img src="@(item.FilePath)" width="25" height="25"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FilePath)
                </td>
                <td>
                    <a asp-page="/Media/Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>